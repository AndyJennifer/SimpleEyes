<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--闪屏页-->
    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/landing_background</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="ProgressBarStyle">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/seek_bar_layer</item>
        <item name="android:minHeight">2dp</item>
        <item name="android:maxHeight">2dp</item>
        <item name="android:mirrorForRtl">true</item>
    </style>

</resources>
